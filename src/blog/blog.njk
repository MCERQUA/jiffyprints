    </div>
  </div>
</section>

{% set cta_data = {
  title: "Have a Question?",
  description: "Don't see what you're looking for? Contact us and we might write about it in our next blog post!",
  button_text: "Contact Us",
  button_link: "/contact/"
} %}
{% include "components/cta/cta-primary.njk" %}

<style>
.blog-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 4rem;
  align-items: start;
}

.blog-posts {
  display: grid;
  gap: 2rem;
}

.no-posts {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--very-light-gray);
  border-radius: 12px;
}

.blog-sidebar {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.sidebar-section {
  padding: 2rem;
}

.sidebar-section h3 {
  margin-bottom: 1rem;
}

.category-list,
.popular-posts {
  list-style: none;
  padding: 0;
}

.category-list li,
.popular-posts li {
  margin-bottom: 0.75rem;
}

.category-list a,
.popular-posts a {
  color: var(--medium-gray);
  text-decoration: none;
  transition: color 0.3s ease;
}

.category-list a:hover,
.popular-posts a:hover {
  color: var(--red-accent);
}

.popular-posts a {
  font-size: 0.9rem;
  line-height: 1.4;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 1rem;
}

.newsletter-form .form-input {
  width: 100%;
  padding: 0.75rem;
  border: 2px solid rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  font-size: 0.9rem;
}

.newsletter-form .btn {
  padding: 0.75rem 1.5rem;
  font-size: 0.9rem;
}

.topics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.topic-item {
  text-align: center;
}

.topic-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .blog-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .blog-sidebar {
    order: -1;
  }
  
  .sidebar-section {
    padding: 1.5rem;
  }
  
  .topics-grid {
    grid-template-columns: 1fr;
  }
}
</style>