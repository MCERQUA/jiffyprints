    <div class="instagram-footer">
      <a href="https://instagram.com/{{ instagram_handle }}" 
         target="_blank" 
         rel="noopener noreferrer" 
         class="btn btn-outline">
        View More on Instagram
      </a>
    </div>
  </div>
</section>

<style>
.component-instagram-feed {
  padding: 4rem 0;
  background: var(--white);
}

.variant-compact {
  padding: 2rem 0;
}

.instagram-header {
  text-align: center;
  margin-bottom: 3rem;
}

.instagram-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--black);
  margin-bottom: 1rem;
}

.instagram-subtitle {
  font-size: 1.125rem;
  color: var(--light-gray);
  margin-bottom: 1.5rem;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.instagram-handle {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--accent-blue);
  text-decoration: none;
  font-weight: 600;
  font-size: 1.125rem;
  transition: all 0.3s ease;
  padding: 0.75rem 1.5rem;
  border: 2px solid var(--accent-blue);
  border-radius: 50px;
  background: transparent;
}

.instagram-handle:hover {
  background: var(--accent-blue);
  color: var(--white);
  transform: translateY(-2px);
}

.instagram-icon {
  width: 20px;
  height: 20px;
}

.instagram-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.instagram-post {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12px;
  overflow: hidden;
  background: var(--light-background);
  transition: all 0.3s ease;
  cursor: pointer;
}

.instagram-post:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.instagram-placeholder {
  background: linear-gradient(45deg, #f0f0f0, #e8e8e8);
  animation: pulse 2s infinite;
}

.post-image-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--light-gray);
}

.post-image-placeholder svg {
  width: 60px;
  height: 60px;
  opacity: 0.5;
}

.post-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  color: var(--white);
  font-weight: 600;
}

.instagram-post:hover .post-overlay {
  opacity: 1;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.instagram-footer {
  text-align: center;
}

.btn-outline {
  display: inline-block;
  padding: 1rem 2rem;
  border: 2px solid var(--accent-blue);
  color: var(--accent-blue);
  text-decoration: none;
  border-radius: 50px;
  font-weight: 600;
  transition: all 0.3s ease;
  background: transparent;
}

.btn-outline:hover {
  background: var(--accent-blue);
  color: var(--white);
  transform: translateY(-2px);
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* Responsive Design */
@media (max-width: 1200px) {
  .instagram-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .component-instagram-feed {
    padding: 3rem 0;
  }
  
  .instagram-title {
    font-size: 2rem;
  }
  
  .instagram-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  
  .instagram-header {
    margin-bottom: 2rem;
  }
  
  .instagram-footer {
    margin-top: 2rem;
  }
}

@media (max-width: 480px) {
  .instagram-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .instagram-title {
    font-size: 1.75rem;
  }
  
  .instagram-subtitle {
    font-size: 1rem;
  }
}
</style>

<script>
// Instagram feed functionality would go here
// Note: Due to Instagram's API restrictions, this would typically require:
// 1. Instagram Basic Display API integration
// 2. Server-side token management
// 3. Or a third-party service like Instafeed.js

// For now, we'll show placeholder content with a note about implementation
document.addEventListener('DOMContentLoaded', function() {
  const grid = document.getElementById('instagram-grid-{{ instagram_handle }}');
  if (grid) {
    // Add a note about Instagram integration
    setTimeout(() => {
      const placeholders = grid.querySelectorAll('.instagram-placeholder .post-overlay span');
      placeholders.forEach((span, index) => {
        if (index === 0) {
          span.textContent = 'Instagram integration ready for setup';
        } else {
          span.textContent = 'Sample post ' + (index + 1);
        }
      });
    }, 1000);
  }
});
</script>
