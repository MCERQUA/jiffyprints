{# Component: Footer #}
{# Description: Site footer with links and contact info #}
{# Props: none #}
{# Variants: default #}
{# Lines: 140 #}

<footer class="site-footer section-dark">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3 class="footer-title">{{ site.title }}</h3>
                <p class="footer-description">{{ site.description }}</p>
                
                <div class="footer-social">
                    {% for platform, url in site.social %}
                    <a href="{{ url }}" class="social-link" aria-label="{{ platform | title }}">
                        {% if platform == 'facebook' %}ðŸ“˜{% endif %}
                        {% if platform == 'instagram' %}ðŸ“·{% endif %}
                        {% if platform == 'linkedin' %}ðŸ’¼{% endif %}
                    </a>
                    {% endfor %}
                </div>
            </div>
            
            <div class="footer-section">
                <h4 class="footer-heading">Services</h4>
                <ul class="footer-links">
                    <li><a href="/embroidery/">Embroidery</a></li>
                    <li><a href="/printing/">DTF Printing</a></li>
                    <li><a href="/printing/">DTG Printing</a></li>
                    <li><a href="/printing/">Screen Printing</a></li>
                </ul>
            </div>
            
            <div class="footer-section">
                <h4 class="footer-heading">Company</h4>
                <ul class="footer-links">
                    <li><a href="/about/">About Us</a></li>
                    <li><a href="/blog/">Blog</a></li>
                    <li><a href="/quote/">Get Quote</a></li>
                    <li><a href="/contact/">Contact</a></li>
                </ul>
            </div>
            
            <div class="footer-section">
                <h4 class="footer-heading">Contact Info</h4>
                <div class="contact-info">
                    <p><strong>Phone:</strong> {{ site.phone }}</p>
                    <p><strong>Email:</strong> {{ site.email }}</p>
                    <p><strong>Address:</strong><br>
                        {{ site.address.street }}<br>
                        {{ site.address.city }}, {{ site.address.province }}<br>
                        {{ site.address.postal }}
                    </p>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; 2024 {{ site.title }}. All rights reserved.</p>
            <p>Serving {{ site.business.coverage }} since {{ site.business.established }}</p>
        </div>
    </div>
</footer>

<style>
.site-footer {
    background: var(--black);
    color: var(--white);
    padding: 4rem 0 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-section h3,
.footer-section h4 {
    margin-bottom: 1rem;
}

.footer-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--white);
}

.footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--white);
}

.footer-description {
    color: var(--light-gray);
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.footer-social {
    display: flex;
    gap: 1rem;
}

.social-link {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
}

.social-link:hover {
    transform: scale(1.2);
}

.footer-links {
    list-style: none;
}

.footer-links li {
    margin-bottom: 0.5rem;
}

.footer-links a {
    color: var(--light-gray);
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: var(--white);
}

.contact-info p {
    color: var(--light-gray);
    margin-bottom: 0.5rem;
    line-height: 1.6;
}

.footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    text-align: center;
    color: var(--light-gray);
}

.footer-bottom p {
    margin-bottom: 0.5rem;
}

@media (max-width: 768px) {
    .footer-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .site-footer {
        padding: 3rem 0 1.5rem;
    }
}
</style>