{# Component: Quote Form #}
{# Description: Quote request form with file upload #}
{# Props: form_action, success_message #}
{# Variants: default, embroidery-specific #}
{# Lines: 180 #}

{% set component_data = {
  form_action: form_data.form_action or form_action or "/quote",
  success_message: form_data.success_message or success_message or "Thank you! We'll get back to you within 24 hours.",
  variant: form_data.variant or variant or "default"
} %}

<section class="quote-form-section section-light">
    <div class="container">
        <div class="form-wrapper">
            <div class="form-intro">
                {% if component_data.variant == "embroidery-specific" %}
                    <h2 class="heading-md">Get Your Embroidery Quote</h2>
                    <p class="body-text">Upload your logo or design and tell us about your embroidery project. We'll provide a detailed quote within 24 hours.</p>
                {% else %}
                    <h2 class="heading-md">Request a Quote</h2>
                    <p class="body-text">Tell us about your project and we'll provide a personalized quote for your embroidery or printing needs.</p>
                {% endif %}
            </div>
            
            <form class="quote-form" name="quote" method="POST" data-netlify="true" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name" class="form-label">Full Name *</label>
                        <input type="text" id="name" name="name" class="form-input" required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address *</label>
                        <input type="email" id="email" name="email" class="form-input" required>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" id="phone" name="phone" class="form-input">
                    </div>
                    <div class="form-group">
                        <label for="company" class="form-label">Company</label>
                        <input type="text" id="company" name="company" class="form-input">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="service" class="form-label">Service Type *</label>
                    <select id="service" name="service" class="form-input" required>
                        <option value="">Select a service...</option>
                        <option value="embroidery">Embroidery</option>
                        <option value="dtf-printing">DTF Printing</option>
                        <option value="dtg-printing">DTG Printing</option>
                        <option value="screen-printing">Screen Printing</option>
                        <option value="mixed">Multiple Services</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="quantity" class="form-label">Quantity *</label>
                        <input type="number" id="quantity" name="quantity" class="form-input" min="6" required>
                    </div>
                    <div class="form-group">
                        <label for="timeline" class="form-label">Timeline</label>
                        <select id="timeline" name="timeline" class="form-input">
                            <option value="">Select timeline...</option>
                            <option value="standard">Standard (7-10 days)</option>
                            <option value="rush">Rush (3-5 days)</option>
                            <option value="urgent">Urgent (1-2 days)</option>
                            <option value="flexible">Flexible</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="items" class="form-label">Items to be Customized</label>
                    <input type="text" id="items" name="items" class="form-input" placeholder="e.g., T-shirts, Hats, Polos, Hoodies">
                </div>
                
                <div class="form-group">
                    <label for="design" class="form-label">Design File</label>
                    <input type="file" id="design" name="design" class="form-input" accept=".jpg,.jpeg,.png,.pdf,.ai,.eps">
                    <small class="form-help">Upload your logo or design (JPG, PNG, PDF, AI, EPS)</small>
                </div>
                
                <div class="form-group">
                    <label for="description" class="form-label">Project Description</label>
                    <textarea id="description" name="description" class="form-input" rows="4" placeholder="Tell us about your project, colors, placement, any special requirements..."></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary form-submit">
                    Get Quote
                </button>
            </form>
        </div>
    </div>
</section>

<style>
.quote-form-section {
    padding: 4rem 0;
}

.form-wrapper {
    max-width: 700px;
    margin: 0 auto;
}

.form-intro {
    text-align: center;
    margin-bottom: 3rem;
}

.quote-form {
    background: var(--white);
    padding: 3rem;
    border-radius: 20px;
    box-shadow: var(--shadow-large);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    font-weight: 600;
    color: var(--dark-gray);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.form-input {
    width: 100%;
    padding: 1rem;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.8);
}

.form-input:focus {
    outline: none;
    border-color: var(--red-accent);
    background: var(--white);
    box-shadow: 0 0 0 4px var(--red-glow-subtle);
}

.form-help {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.75rem;
    color: var(--light-gray);
}

.form-submit {
    width: 100%;
    justify-content: center;
    margin-top: 1rem;
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
        gap: 0;
    }
    
    .quote-form {
        padding: 2rem;
    }
}
</style>