{# Component: Blog Card #}
{# Description: Blog post preview card #}
{# Props: title, excerpt, date, link #}
{# Variants: featured, standard #}
{# Lines: 70 #}

{% set component_data = {
  title: card_data.title or title or "Blog Post Title",
  excerpt: card_data.excerpt or excerpt or "Blog post excerpt...",
  date: card_data.date or date or null,
  link: card_data.link or link or "#",
  variant: card_data.variant or variant or "standard"
} %}

<article class="blog-card variant-{{ component_data.variant }} card-light">
    <div class="blog-content">
        <h3 class="blog-title">
            <a href="{{ component_data.link }}">{{ component_data.title }}</a>
        </h3>
        
        {% if component_data.date %}
        <time class="blog-date">{{ component_data.date | dateDisplay }}</time>
        {% endif %}
        
        <p class="blog-excerpt">{{ component_data.excerpt }}</p>
        
        <a href="{{ component_data.link }}" class="blog-link">
            Read More
        </a>
    </div>
</article>

<style>
.blog-card {
    transition: all 0.3s ease;
}

.blog-card.variant-featured {
    border-left: 4px solid var(--red-accent);
}

.blog-content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.blog-title {
    margin-bottom: 0.5rem;
}

.blog-title a {
    color: var(--black);
    text-decoration: none;
    transition: color 0.3s ease;
}

.blog-title a:hover {
    color: var(--red-accent);
}

.blog-date {
    font-size: 0.875rem;
    color: var(--light-gray);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.blog-excerpt {
    margin-bottom: 1.5rem;
    flex-grow: 1;
}

.blog-link {
    color: var(--red-accent);
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.875rem;
    transition: color 0.3s ease;
    margin-top: auto;
}

.blog-link:hover {
    color: var(--black);
}
</style>