{# Component: Navigation Bar #}
{# Description: Main site navigation with logo and menu #}
{# Props: current_page #}
{# Variants: desktop, mobile #}
{# Lines: 90+ #}

{% set current = page.url %}

<nav class="navbar">
    <div class="container nav-content">
        <a href="/" class="logo">{{ site.title }}</a>
        
        <!-- Desktop Navigation -->
        <ul class="nav-links">
            {% for item in navigation.primary %}
            <li>
                <a href="{{ item.url }}" 
                   class="nav-link{% if current == item.url %} nav-link-active{% endif %}">
                    {{ item.text }}
                </a>
            </li>
            {% endfor %}
        </ul>
        
        <!-- Mobile: Phone Number and CTA + Menu -->
        <div class="mobile-header-right">
            <a href="tel:{{ site.phone }}" class="mobile-phone">{{ site.phone }}</a>
            <a href="{{ navigation.cta.url }}" class="{{ navigation.cta.class }} mobile-cta-btn">
                {{ navigation.cta.text }}
            </a>
            <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
        
        <!-- Desktop CTA Button -->
        <a href="{{ navigation.cta.url }}" class="{{ navigation.cta.class }} desktop-cta-btn">
            {{ navigation.cta.text }}
        </a>
    </div>
    
    <!-- Mobile Navigation Menu -->
    <div class="mobile-menu">
        <ul class="mobile-nav-links">
            {% for item in navigation.primary %}
            <li>
                <a href="{{ item.url }}" 
                   class="mobile-nav-link{% if current == item.url %} mobile-nav-link-active{% endif %}">
                    {{ item.text }}
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</nav>

<style>
.nav-link-active {
    color: var(--black) !important;
    font-weight: 600;
}

.nav-link-active::before {
    width: 100% !important;
}

.mobile-header-right {
    display: none;
    align-items: center;
    gap: 1rem;
}

.mobile-phone {
    color: var(--medium-gray);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: color 0.3s ease;
}

.mobile-phone:hover {
    color: var(--red);
}

.mobile-cta-btn {
    display: none;
}

.desktop-cta-btn {
    display: inline-flex;
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    gap: 4px;
    padding: 8px;
}

.mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--black);
    border-radius: 2px;
    transition: all 0.3s ease;
}

.mobile-menu {
    display: none;
    background: #2a2a2a; /* DARK GREY BACKGROUND */
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: var(--shadow-medium);
}

.mobile-nav-links {
    list-style: none;
    padding: 1rem 0;
}

.mobile-nav-link {
    display: block;
    padding: 0.75rem 1rem;
    color: #cccccc; /* LIGHT GREY TEXT */
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.mobile-nav-link:hover,
.mobile-nav-link-active {
    color: var(--white); /* WHITE ON HOVER/ACTIVE */
    background: rgba(255, 255, 255, 0.1);
}

@media (max-width: 768px) {
    .nav-links {
        display: none;
    }
    
    .desktop-cta-btn {
        display: none;
    }
    
    .mobile-header-right {
        display: flex;
    }
    
    .mobile-cta-btn {
        display: inline-flex;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }
    
    .mobile-menu-toggle {
        display: flex;
    }
    
    .mobile-menu.active {
        display: block;
    }
}

/* Ensure proper spacing and alignment */
.nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
}

@media (max-width: 768px) {
    .nav-content {
        gap: 1rem;
    }
}
</style>
